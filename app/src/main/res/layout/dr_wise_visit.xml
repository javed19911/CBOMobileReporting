<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:background="@drawable/custom_square_transparent_bg"
        android:orientation="vertical"
        android:padding="5dp">


        <ScrollView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Location"
                        android:textColor="#000000"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textView1"
                        android:background="#fbf3a0"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:visibility="gone">

                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@+id/address4dr"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="3dp"
                        android:text="Refresh"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_month"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <utils.font_package.Text_view_Regular
                        android:id="@+id/tv_month"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Select Month "
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="17dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/drop_bg"
                        android:orientation="horizontal">

                        <utils.font_package.Button_Regular_black_text
                            android:id="@+id/bt_month_previoud_dr_visit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:prompt="@string/spinner_title4"
                            android:textColor="@color/navigationBarColor"

                            />

                        <View
                            android:layout_width="1.8dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_drvisit_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:layout_margin="0dp"
                            android:layout_weight="5"
                            android:padding="6.5dp"
                            app:srcCompat="@drawable/drop_icon" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <utils.font_package.Text_view_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="MR Name    "
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="15dp"

                        android:background="@drawable/drop_bg"
                        android:orientation="horizontal">

                        <utils.font_package.Button_Regular_black_text
                            android:id="@+id/mrname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:prompt="@string/spinner_title4"
                            android:textColor="@color/navigationBarColor"

                            />

                        <View
                            android:layout_width="1.8dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_mr_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:layout_margin="0dp"
                            android:layout_weight="5"
                            android:padding="6.5dp"
                            app:srcCompat="@drawable/drop_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <utils.font_package.Text_view_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="Dr. Name    "
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="15dp"

                        android:background="@drawable/drop_bg"
                        android:orientation="horizontal">

                        <utils.font_package.Button_Regular_black_text
                            android:id="@+id/drname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:prompt="@string/spinner_title4"
                            android:textColor="@color/navigationBarColor"

                            />

                        <View
                            android:layout_width="1.8dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_drvisit_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:layout_margin="0dp"
                            android:layout_weight="5"
                            android:padding="6.5dp"
                            app:srcCompat="@drawable/drop_icon" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/workwithdcal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:layout_marginTop="20dip"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Click  + sign for WorkWith"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/getdcal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dip"
                        android:onClick="get"
                        android:text="+"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:orientation="vertical">


                    <utils.font_package.Button_Bold
                        android:id="@+id/add"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"

                        android:background="@drawable/button_text_view_selector"
                        android:text="Show"
                        android:textAllCaps="false"
                        android:textColor="@color/textColorPrimary"

                        android:textSize="20dp" />


                    <utils.font_package.Button_Bold
                        android:id="@+id/bkfinal_button"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_text_view_selector"
                        android:ems="20"
                        android:text="Back"
                        android:textAllCaps="false"

                        android:textColor="@color/textColorPrimary"
                        android:textSize="20dp" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
