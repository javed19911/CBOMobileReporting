<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">



    <!--<include layout="@layout/hadder_2016"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="?colorPrimary"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/hadder_text_1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gift "
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/noGiftLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/noGiftTxt"
                android:text="No Gift"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:id="@+id/noGift"/>
        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:padding="5dp">




        <ListView
            android:id="@+id/dr_gift_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:descendantFocusability="afterDescendants"
            android:layout_weight="1" />

        <utils.font_package.Button_Bold
            android:id="@+id/dr_gift_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_text_view_selector"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
