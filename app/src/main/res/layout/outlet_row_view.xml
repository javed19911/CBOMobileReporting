<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:elevation="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/underline_bg"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_layout"
            android:orientation="horizontal">



            <utils_new.UnderlineTextView
                android:id="@+id/name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:minHeight="35dp"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>


            <TextView
                android:id="@+id/TotSale"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Total Sale"
                android:gravity="right"
                android:paddingRight="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.6"
                android:textSize="12dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/CashSale"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Cash Sale"
                android:gravity="right"
                android:paddingRight="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/OthSale"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Other Sale"
                android:gravity="right"
                android:paddingRight="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/bill_count"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="Bills"
                android:gravity="right"
                android:paddingRight="3dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.3"
                android:textSize="12dp" />

        </LinearLayout>





    </LinearLayout>


</androidx.cardview.widget.CardView>




