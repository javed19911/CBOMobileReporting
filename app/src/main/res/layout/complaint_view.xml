<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textColorPrimary"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:background="@drawable/custom_round_white_view_bg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <utils.font_package.Text_view_Bold_16
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Comp.No          :"
        android:textSize="18dp"

        android:textColor="@color/navigationBarColor"
        />

    <utils.font_package.Text_view_Regular
        android:id="@+id/text_compbg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="number"
        android:layout_marginLeft="8dp"
        android:textColor="@color/navigationBarColor"

        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >
        <utils.font_package.Text_view_Bold_16
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Comp.Date       :"
        android:textColor="@color/navigationBarColor"

        />

        <utils.font_package.Text_view_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            android:text="date"
            android:id="@+id/txt_date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <utils.font_package.Text_view_Bold_16
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Retailer Name :"
            android:textColor="@color/navigationBarColor"

            />

        <utils.font_package.Text_view_Regular
            android:id="@+id/txt_retailerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            android:text="date"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <utils.font_package.Text_view_Bold_16
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Complaintb      :"
            android:textColor="@color/navigationBarColor"

            />

        <utils.font_package.Text_view_Regular
            android:id="@+id/txt_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/navigationBarColor"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:text="should i do "
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>