<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/marquee_myutil_menu"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:visibility="gone"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Dcr Pending Dates:"
        android:layout_gravity="center"
        android:gravity="center"

        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/upccname_2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="#fff" />
    <TextView
        android:visibility="gone"
        android:id="@+id/upempname_2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upccname"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/roung_bg_layout_white"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="145dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/upload_pic_btn_2016"
                        app:srcCompat="@drawable/upload_image_white"
                        android:layout_marginRight="5dp"
                        />
                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="Upload  Pictures"
                        android:textColor="@color/navigationBarColor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="145dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/updn_2016"
                        app:srcCompat="@drawable/upload_download_white"
                        android:layout_marginLeft="3.5dp"
                        android:layout_marginRight="3.5dp"/>

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="Upload Download"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/hide_dr_2016"
                    android:layout_width="140dp"
                    android:layout_height="145dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/reset_2016"
                        app:srcCompat="@drawable/reset_day_plan_white"
                        android:layout_marginLeft="5dp"/>


                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="Reset    DayPlan"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/myutil_captureSign_2016"
                        app:srcCompat="@drawable/capture_image_white"
                        android:layout_weight="2"
                        android:layout_marginRight="5dp"
                        />
                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="Capture Signature"

                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/map_view_2016"
                        app:srcCompat="@drawable/map_view_white"
                        android:layout_marginRight="3.5dp"
                        android:layout_marginLeft="3.5dp"/>

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="Map                View"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/web_view_2016"
                        app:srcCompat="@drawable/web_login_white"
                        android:layout_marginRight="3.5dp"
                        android:layout_marginLeft="3.5dp"/>

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="Web                   Login"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/visual_aid_lauout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="145dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:id="@+id/down_vaid_2016"
                        app:srcCompat="@drawable/upload_download_white"
                        android:layout_marginLeft="3.5dp"
                        android:layout_marginRight="3.5dp"/>

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center|top"
                        android:text="VisualAid DownLoad"
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/show_visual1_2016"
                        app:srcCompat="@drawable/capture_image_white"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        />
                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:gravity="center|top"
                        android:text=""
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>


                <LinearLayout

                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:text="Track From Here"
                        android:id="@+id/emp_track_2016"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/upload_pic_btn"
                        android:layout_below="@+id/show_visual1"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="30dp"

                        android:visibility="gone"
                        />

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:gravity="center|top"
                        android:text=""
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/leave_RequestBt_2016"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="19dp"
                        android:text="Leave Request"
                        android:visibility="gone"

                        />
                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:gravity="center|top"
                        android:text=""

                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                        android:layout_weight="2"
                        android:layout_marginLeft="10dp"
                        />
                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:gravity="center|top"
                        android:text=""
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>


                <LinearLayout

                    android:layout_width="140dp"
                    android:layout_height="135dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ImageView
                        android:text="Track From Here"

                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/upload_pic_btn"
                        android:layout_below="@+id/show_visual1"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="30dp"

                        android:visibility="gone"
                        />

                    <utils.font_package.Text_view_Regular
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="12"
                        android:gravity="center|top"
                        android:text=""
                        android:textColor="@color/navigationBarColor" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>


</LinearLayout>