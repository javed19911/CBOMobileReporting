<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:hint="Search product by name"
        android:drawableLeft="@drawable/search"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/stk_sample_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants"/>
    </LinearLayout>

    <utils.font_package.Button_Bold
        android:id="@+id/stk_sample_save"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:background="@drawable/button_text_view_selector"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />



</LinearLayout>