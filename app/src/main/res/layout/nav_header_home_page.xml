<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/striper_font_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_pic"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:src="@drawable/user_id" />

        <ImageView
            android:id="@+id/company_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:src="@drawable/cbo" />

    </RelativeLayout>



    <TextView
        android:id="@+id/company_name_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:text="CBO Infotech pvt. ltd"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#fff"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/emp_name_drawer"
        />
    <TextView
        android:id="@+id/emp_desig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Designation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="Head-Quarter"
        android:id="@+id/emp_hq"
        />
  </LinearLayout>
