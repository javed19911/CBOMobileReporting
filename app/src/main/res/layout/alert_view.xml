<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#aaa"
    android:elevation="5dp"
    android:layout_margin="3dp"
    android:layout_centerInParent="true"
    card_view:cardCornerRadius="7dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/container_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:text="Title"
                    android:background="#fa0B89ED"
                    android:textStyle="bold"
                    android:elevation="3dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@+id/title"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="#8c8c8c"/>


                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_below="@+id/title"
                    android:paddingRight="7dp"
                    android:textColor="#6A6A6A"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:text="Message"
                    android:fontFamily="@font/roboto_regular"
                    android:minHeight="50dp"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/title"
                    android:id="@+id/table_view"/>




                <!-- <include
                     android:id="@+id/attach_perview"
                     android:visibility="gone"
                     layout="@layout/activity_preiew_attachment"/>-->





            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_1"
                android:layout_marginTop="10dp"
                android:gravity="center">


                <Button
                    android:id="@+id/negative"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toEndOf="@+id/positive"
                    android:layout_toRightOf="@+id/positive"
                    android:text="Cancel"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_alert"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/positive"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_alert"
                    android:text="Ok"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:visibility="visible" />





            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_2"
                android:gravity="right">
                <TextView
                    android:id="@+id/PA_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49dp"

                    android:gravity="left"
                    android:text="PA_ID"
                    android:textColor="#aaa"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/report"
                    android:visibility="gone"
                    android:text="Error? Click Me to Report Now....."
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/body"
                    android:textSize="13sp"
                    android:textColor="#F00"
                    android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>



    </ScrollView>






</androidx.cardview.widget.CardView>









