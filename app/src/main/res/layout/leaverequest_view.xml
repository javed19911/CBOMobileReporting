<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/custom_round_white_view_bg"
    android:paddingLeft="5dp"

    >
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        >

        <utils.font_package.Text_view_Regular
            android:id="@+id/leaveHead"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="P.L."
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/leaveHeadId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Head"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/leaveId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Head"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000"
            android:visibility="gone"

            />
        <utils.font_package.Edit_text_Regular
            android:gravity="center"
            android:id="@+id/bal_leave_qty"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:editable="false"
            android:linksClickable="false"
            android:text=" Bal"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            />

        <utils.font_package.Edit_text_Regular
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/requriedLeave"
            android:text=" Req"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000"
            android:layout_marginLeft="30dp"
           android:gravity="center"
            android:inputType="number"
            />

        </LinearLayout>

</LinearLayout>