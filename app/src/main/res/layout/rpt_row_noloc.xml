<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/custom_round_white_view_bg"

        >
    <utils.font_package.Text_view_Regular
		android:id="@+id/inbox_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: "
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="font/proximaNova_Bold.ttf"
            />
        <utils.font_package.Text_view_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail From: "
            android:id="@+id/type_noloc"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="4dp"

            android:focusableInTouchMode="false"
android:clickable="false"
android:focusable="false"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="font/proximaNova_Bold.ttf"
            />

        <utils.font_package.Text_view_Regular
            android:id="@+id/emp_name_noloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="4dp"
            android:text="Mail From: "

             android:focusableInTouchMode="false"
android:clickable="false"
android:focusable="false"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="font/proximaNova_Bold.ttf"
            />
        <utils.font_package.Text_view_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail From: "
            android:id="@+id/emp_time_noloc"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="4dp"

            android:focusableInTouchMode="false"
android:clickable="false"
android:focusable="false"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual Area: "
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="font/proximaNova_Bold.ttf"

            />
        <utils.font_package.Text_view_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail From: "
            android:id="@+id/emp_act_area_noloc"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:focusableInTouchMode="false"
            android:clickable="false"
           android:focusable="false"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>