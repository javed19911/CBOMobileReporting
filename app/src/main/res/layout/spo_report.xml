<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/hadder_2016" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/rptlay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/wef"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="25dp"
                    android:text=" Name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_spo_rptt_name"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/drop"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rptlay3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">

                <utils.font_package.Text_view_Regular

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="From Month"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/drop_bg"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text

                        android:id="@+id/bt_spo_rptt_from"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/bt_spo_rptt_from_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="5"
                        android:padding="6.5dp"
                        android:src="@drawable/drop_icon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rptlay2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:visibility="gone"

                android:orientation="horizontal">

                <TextView

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="To Month"
                    android:textColor="#fff"
                    android:textSize="17dp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"

                    android:background="@drawable/drop_bg"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text

                        android:id="@+id/bt_spo_month_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/bt_spo_rptt_to_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="5"
                        android:padding="6.5dp"
                        android:src="@drawable/drop_icon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From  Date"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/endDateDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/fromdatebtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/spinner_img_followdate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:src="@drawable/calendar" />
                </LinearLayout>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To  Date"
                    android:layout_marginTop="15dp" android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">


                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/todatebtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/spinner_img_nextfollowdate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:src="@drawable/calendar" />
                </LinearLayout>

                <TextView

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Head Quarter"
                    android:layout_marginTop="15dp" android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/Hq_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/Hq_btn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:src="@drawable/drop_icon" />
                </LinearLayout>


                <TextView

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Value"
                    android:layout_marginTop="15dp" android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/Display_Unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/bt_unit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:src="@drawable/drop_icon" />
                </LinearLayout>
            </LinearLayout>
            <utils.font_package.Button_Bold
                android:id="@+id/bt_show_spo_rpt_details"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="85dp"
                android:background="@drawable/button_text_view_selector"
                android:text="Show"
                android:textAllCaps="false"

                android:textColor="#fff"
                android:textSize="18sp" />

            <utils.font_package.Button_Bold
                android:id="@+id/bt_back_rpt_list"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_text_view_selector"
                android:text="Back"
                android:textAllCaps="false"

                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
