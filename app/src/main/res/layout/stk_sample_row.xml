<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="5dp"
	android:layout_margin="5dp"
	android:background="@drawable/custom_square_transparent_bg"
	android:layout_width="fill_parent">
	<TableLayout

		android:id="@+id/tableLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<TableRow
			android:id="@+id/tableRow4"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<utils.font_package.Text_view_Regular
				android:id="@+id/label"
				android:layout_weight="3"
				android:text="shivam1"
				android:maxWidth="100dp"
				android:minWidth="100dp"
				android:gravity="center|left"
				android:minHeight="50dp"

				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
			<utils.font_package.Text_view_Regular
				android:id="@+id/label2"
				android:layout_weight="4"
				android:text="shivam2"
				android:visibility="gone"
				android:gravity="center|left"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/>
			<utils.font_package.Text_view_Regular
				android:id="@+id/label_rate"
				android:layout_weight="4"
				android:visibility="gone"
				android:text="shivam3"
				android:gravity="center|left"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/>
			<CheckBox

				android:id="@+id/check"
				android:layout_height="35dp"
				android:layout_weight="1"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_width="fill_parent"/>
			<utils.font_package.Edit_text_Regular
				android:hint="Sample"
				android:gravity="center"
				android:layout_height="40dp"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_weight="4"
				android:inputType="number"
				android:id="@+id/txtSample"
				/>
			<utils.font_package.Edit_text_Regular
				android:hint="P.O.B."
				android:gravity="center"
				android:layout_height="40dp"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_weight="4"
				android:inputType="number"
				android:id="@+id/txtAddress"
				/>

		</TableRow>

	</TableLayout>
</LinearLayout>


