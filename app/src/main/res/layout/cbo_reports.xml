<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorPrimary"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/custom_square_transparent_bg"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/rptlay1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <utils.font_package.Text_view_Regular
                    android:id="@+id/wef"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dip"
                    android:gravity="center"
                    android:text=" Name"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_round_white_view_bg"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/rptt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="0dip"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:lines="2"
                        android:hint="Select"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="14sp" />


                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorPrimaryDark"/>

                    <ImageView
                        android:id="@+id/spinner_img_dcr_rpt_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="5"
                         android:padding="6.5dp"
                        app:srcCompat="@drawable/drop_icon" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rptlay2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <utils.font_package.Text_view_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"

                    android:layout_marginLeft="10dip"
                    android:gravity="center"
                    android:text=" Month"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/custom_round_white_view_bg"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/month_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="0dip"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:lines="2"
                        android:hint="Select"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/navigationBarColor"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/colorPrimaryDark"/>


                    <ImageView
                        android:id="@+id/spinner_img_dcr_rpt_month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="5"

                        android:padding="6.5dp"
                        app:srcCompat="@drawable/drop_icon" />
                </LinearLayout>

            </LinearLayout>

            <utils.font_package.Button_Bold
                android:id="@+id/bt_done_rpt"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/button_text_view_selector"
                android:text="Show"
                android:textAllCaps="false"
                android:textColor="@color/textColorPrimary"
                android:textSize="18dp" />

            <utils.font_package.Button_Bold
                android:id="@+id/bt_back_rpt_list"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_text_view_selector"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/textColorPrimary"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/hadder_2016" />

</LinearLayout>