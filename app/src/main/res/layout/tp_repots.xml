<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        android:background="@drawable/custom_round_white_view_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/rptlay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <utils.font_package.Text_view_Regular
                android:id="@+id/wef"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/drop_bg"
                android:orientation="horizontal">

                <utils.font_package.Button_Regular_black_text
                    android:id="@+id/rptt_name_tp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:prompt="@string/spinner_title4"
                    android:text="---Select---"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationBarColor"

                    />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/spinner_img_tp_name"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"

                    android:layout_weight="5"
                    android:padding="6.5dp"
                    android:src="@drawable/drop_icon" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rptlay2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <utils.font_package.Text_view_Regular
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Month" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/drop_bg"
                android:orientation="horizontal">

                <utils.font_package.Button_Regular_black_text
                    android:id="@+id/month_name_tp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:prompt="@string/spinner_title4"
                    android:text="---Select---"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationBarColor"

                    />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/spinner_img_tp_month"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"

                    android:layout_weight="5"
                    android:padding="6.5dp"
                    android:src="@drawable/drop_icon" />
            </LinearLayout>


        </LinearLayout>

        <utils.font_package.Button_Bold
            android:id="@+id/bt_done_rpt_tp"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_text_view_selector"
            android:gravity="center"
            android:text="Show"
            android:textAllCaps="false" />

        <utils.font_package.Button_Bold
            android:id="@+id/bt_back_rpt_list_tp"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_text_view_selector"
            android:text="Back"
            android:textAllCaps="false" />
    </LinearLayout>


</LinearLayout>