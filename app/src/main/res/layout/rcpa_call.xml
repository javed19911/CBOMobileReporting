<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/hadder_2016"/>

    <LinearLayout
        android:layout_margin="3dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_square_transparent_bg"


        >
    <LinearLayout
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rptlay1">
        <utils.font_package.Text_view_Regular
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" Name"
            android:textSize="15sp"
            android:layout_marginLeft="10dip"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:id="@+id/wef" />
        <utils.font_package.Text_view_Regular
            android:id="@+id/bt_spo_rptt_name"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:background="@drawable/drop"
            android:layout_marginTop="20dip"
            android:textSize="14sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rptlay4"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"

        >
        <utils.font_package.Text_view_Regular
            android:layout_weight="5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date :"
            android:textSize="15sp"
            android:layout_marginLeft="10dip"
            android:textColor="#fff"

            />
        <utils.font_package.Edit_text_Regular
            android:layout_weight="1"
            android:editable="false"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_rcpa_call_date"
            android:layout_width="170dp"
            android:layout_height="45dp"
           android:text="--- Select Date ---"
            android:textStyle="bold"

            android:textSize="15sp"

            />
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_rcpa_calender_btn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"

          android:background="@drawable/calender_00"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/rptlay3">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:text="Doctor"
            android:textColor="@color/navigationBarColor"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drop_bg"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_rcpa_call_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:minHeight="40dp"
                    android:prompt="@string/spinner_title4"
                    android:text="---Select---"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationBarColor"

                    />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/spinner_img_dr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="5"
                    android:padding="6.5dp"
                    android:src="@drawable/drop_icon" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/rptlay2">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:text="Chemist"
            android:textColor="@color/navigationBarColor"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drop_bg"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_rcpa_call_chemist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:minHeight="40dp"
                    android:prompt="@string/spinner_title4"
                    android:text="---Select---"
                    android:textAllCaps="false"
                    android:textColor="@color/navigationBarColor"

                    />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/spinner_img_chem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="5"
                    android:padding="6.5dp"
                    android:src="@drawable/drop_icon" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <utils.font_package.Button_Bold
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:id="@+id/bt_rcpa_show"
        android:textColor="#fff"
        android:text="Show"
        android:background="@drawable/button_text_view_selector"
        android:layout_gravity="center_horizontal" />
        <utils.font_package.Button_Bold
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:id="@+id/bt_rcpa_back"
            android:textColor="#fff"
            android:text="Back"
            android:background="@drawable/button_text_view_selector"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</LinearLayout>