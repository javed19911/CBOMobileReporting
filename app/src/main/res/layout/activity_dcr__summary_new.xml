<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dcr__summary_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cbo.cbomobilereporting.ui_new.dcr_activities.DCR_Summary_new">

    <include layout="@layout/hadder_2016" />


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ExpandableListView
            android:id="@+id/summary_list"
            android:layout_height="match_parent"
            android:background="#fff"
            android:divider="#fff"
            android:dividerHeight="0dp"
            android:layout_above="@+id/back_layout"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back_layout"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:text="Logout!"
                android:layout_weight="1"
                android:id="@+id/Logout"
                android:textStyle="bold"
                android:textColor="#fff"
                android:elevation="3dp"
                android:background="@drawable/button_back_2016"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:text="Back"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:id="@+id/back"
                android:textStyle="bold"
                android:textColor="#fff"
                android:elevation="3dp"
                android:background="@drawable/button_back_2016"/>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>
