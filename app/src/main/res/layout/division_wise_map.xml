<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_margin="8dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="15dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/endDateDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/edt_div_wise_map_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="---Select---"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/bt_div_wise_map_calender_btn"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        app:srcCompat="@drawable/calendar" />
                </LinearLayout>

                <TextView

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Division:"
                    android:layout_marginTop="15dp" android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/bt_division_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="@string/spinner_title4"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/spinner_img_dision_map"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        app:srcCompat="@drawable/drop_icon" />
                </LinearLayout>
                <TextView

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manager:"
                    android:layout_marginTop="15dp" android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_background"
                    android:orientation="horizontal">

                    <utils.font_package.Button_Regular_black_text
                        android:id="@+id/bt_managerName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:minHeight="50dp"
                        android:prompt="@string/spinner_title4"
                        android:text="@string/spinner_title4"
                        android:textAllCaps="false"
                        android:textColor="@color/navigationBarColor"

                        />
                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView

                        android:id="@+id/spinner_img_manager_map"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        app:srcCompat="@drawable/drop_icon" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/check_satelite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_checkbox_design"
                        android:checked="false"/>

                    <utils.font_package.Text_view_Regular
                        android:textStyle="bold"
                        android:textColor="@color/navigationBarColor"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:text="Satelite View"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <utils.font_package.Button_Bold
            android:id="@+id/view_map_division"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_text_view_selector"
            android:text="Show"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="18sp" />

        <utils.font_package.Button_Bold
            android:id="@+id/bt_Back_division_wise"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_text_view_selector"
            android:text="Back"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>







</LinearLayout>