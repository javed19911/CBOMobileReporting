<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/custom_square_transparent_bg"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:textColor="@color/navigationBarColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drop_bg"
                    android:orientation="horizontal">

                    <Spinner
                        android:gravity="center"
                        android:id="@+id/category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:prompt="@string/spinner_title4"
                        android:textColor="@color/navigationBarColor"

                        />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3.5dp"
                        android:layout_marginTop="3.5dp"
                        android:background="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/spinner_category"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="1dp"
                        android:padding="6.5dp"
                        app:srcCompat="@drawable/drop_icon" />
                </LinearLayout>

                <EditText
                    android:id="@+id/other_remark"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:hint="Enter Category"
                    android:background="@drawable/custom_square_transparent_bg"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1.8dp"
            android:layout_margin="3dp"
            android:background="@color/colorPrimaryDark"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/navigationBarColor"
                    android:text="Name"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_square_transparent_bg"

                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/name_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="Eg.(Ram Kumar)"
                                android:inputType="text"
                                android:padding="3dp" />


                            <View
                                android:layout_width="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3.5dp"
                                android:layout_marginTop="3.5dp"
                                android:background="@color/colorPrimaryDark" />


                            <ImageView
                                android:id="@+id/attach"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="2.5dp"
                                app:srcCompat="@android:drawable/ic_menu_camera" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/attach_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="* Attach Picture...."
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/navigationBarColor"
                    android:text="Address"/>

                <EditText
                    android:id="@+id/address_edt"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:padding="3dp"
                    android:hint="Eg.(Uttam Nagar, Delhi-110059)"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_square_transparent_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="top" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textColor="@color/navigationBarColor"
                        android:text="EMail"/>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:inputType="textEmailAddress"
                        android:padding="3dp"
                        android:hint="Eg.(abc@abc.com)"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="top" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/visuality_selection"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:textColor="@color/navigationBarColor"
                            android:text="Potential "/>

                        <EditText
                            android:id="@+id/potential_edt"
                            android:layout_width="match_parent"
                            android:inputType="numberDecimal"
                            android:padding="3dp"
                            android:hint="Eg.(1000)"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_square_transparent_bg"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:textColor="@color/navigationBarColor"
                            android:text="Area"/>

                        <EditText
                            android:id="@+id/area_edt"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:padding="3dp"
                            android:hint="Eg.(Delhi)"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_square_transparent_bg"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="top" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Class"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/navigationBarColor" />

                        <LinearLayout
                            android:id="@+id/class_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/drop_bg"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/class_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:prompt="@string/spinner_title4"
                                android:text="---Select---"
                                android:textAllCaps="false"
                                android:textColor="@color/navigationBarColor"

                                />

                            <View
                                android:layout_width="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3.5dp"
                                android:layout_marginTop="3.5dp"
                                android:background="@color/colorPrimaryDark" />

                            <ImageView
                                android:id="@+id/class_img"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:padding="6.5dp"
                                app:srcCompat="@drawable/drop_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Speciality"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/navigationBarColor" />

                        <LinearLayout
                            android:id="@+id/spl_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/drop_bg"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/spicility_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:prompt="@string/spinner_title4"
                                android:text="---Select---"
                                android:textAllCaps="false"
                                android:textColor="@color/navigationBarColor"

                                />

                            <View
                                android:layout_width="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3.5dp"
                                android:layout_marginTop="3.5dp"
                                android:background="@color/colorPrimaryDark" />

                            <ImageView
                                android:id="@+id/spl_img"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:padding="6.5dp"
                                app:srcCompat="@drawable/drop_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Qfl."
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/navigationBarColor" />

                        <LinearLayout
                            android:id="@+id/qfl_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/drop_bg"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/qulification_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:prompt="@string/spinner_title4"
                                android:text="---Select---"
                                android:textAllCaps="false"
                                android:textColor="@color/navigationBarColor"

                                />

                            <View
                                android:layout_width="1.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3.5dp"
                                android:layout_marginTop="3.5dp"
                                android:background="@color/colorPrimaryDark" />

                            <ImageView
                                android:id="@+id/qfl"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:padding="6.5dp"
                                app:srcCompat="@drawable/drop_icon" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textColor="@color/navigationBarColor"
                        android:text="Mobile Number"/>

                    <EditText
                        android:id="@+id/mobile_edt"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:padding="3dp"
                        android:hint="Eg.(9000012345)"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Business Details."
                        android:textColor="@color/navigationBarColor"/>

                    <EditText
                        android:id="@+id/business_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:layout_weight="1"
                        android:layout_gravity="center"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Ref. By"
                        android:textColor="@color/navigationBarColor"/>

                    <EditText
                        android:id="@+id/reffered_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:layout_weight="1"
                        android:layout_gravity="center"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Call Details."
                        android:textColor="@color/navigationBarColor" />

                    <EditText
                        android:id="@+id/call_detail_edt"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:layout_weight="1"
                        android:gravity="top"

                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:background="@drawable/button_text_view_selector"
        android:text="Submit"
        android:textAllCaps="false" />

</LinearLayout>