<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical">-->

        <!---->

        <!--&lt;!&ndash;<utils.font_package.Button_Bold&ndash;&gt;-->
        <!--&lt;!&ndash;android:id="@+id/dr_sample_save"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_height="30dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_margin="7dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:background="@drawable/button_text_view_selector"&ndash;&gt;-->
        <!--&lt;!&ndash;android:text="Done"&ndash;&gt;-->
        <!--&lt;!&ndash;android:textAllCaps="false"&ndash;&gt;-->
        <!--&lt;!&ndash;android:textColor="@color/textColorPrimary"&ndash;&gt;-->
        <!--&lt;!&ndash;android:textSize="18dp" />&ndash;&gt;-->

    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/headder"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/hadder_text_1"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Gift "
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/filter"
            app:srcCompat="@drawable/filter_img"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_below="@+id/headder"
        android:hint="Search product by name"
        android:drawableLeft="@drawable/search"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/search"
        android:id="@+id/titleheader"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <utils.font_package.Text_view_Bold_10
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textSize="13sp"
            android:layout_weight="4"
            />
        <utils.font_package.Text_view_Bold_10
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Promoted"
            android:layout_weight="3"
            />
        <utils.font_package.Text_view_Bold_10
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Qty."
            />
        <utils.font_package.Text_view_Bold_10
            android:gravity="center"
            android:layout_width="60dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Pob."
            />
        <utils.font_package.Text_view_Bold_10
            android:id="@+id/check_text_prescribe"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="60dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Rx."
            />

        <utils.font_package.Text_view_Bold_10
            android:id="@+id/text_prescribe_Qty"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="60dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Rx. Qty."
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_below="@+id/titleheader"
        android:layout_above="@+id/dr_sample_save"
        android:orientation="vertical">

        <ListView
            android:id="@+id/dr_sample_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/dr_sample_save"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemincart"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="end"
            android:layout_weight="2"
            android:textColor="@android:color/white"
            android:text="CONTINUE >>"/>
    </LinearLayout>


</RelativeLayout>

