<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/hadder_2016"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:hint="Search product by name"
        android:drawableLeft="@drawable/search"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <utils.font_package.Text_view_Bold_10
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textSize="13sp"
            android:layout_weight="4"
            />
        <utils.font_package.Text_view_Bold_10
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Promoted"
            android:layout_weight="3"
            />
        <utils.font_package.Text_view_Bold_10
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Qty."
            />
        <utils.font_package.Text_view_Bold_10
            android:gravity="center"
            android:layout_width="60dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Pob."
            />
        <utils.font_package.Text_view_Bold_10
            android:id="@+id/check_text_prescribe"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="60dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:text="Rx."
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/dr_sample_list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants"/>
    </LinearLayout>

    <utils.font_package.Button_Bold
        android:id="@+id/dr_sample_save"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:background="@drawable/button_text_view_selector"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

</LinearLayout>
